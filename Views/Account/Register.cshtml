@model CourseShopOnline.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Đăng kí";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid text-light py-5" style="min-height: 80vh; background-color: #495057;">
    <div class="row justify-content-center align-items-center">
        <div class="col-lg-5 text-start ps-5">
            <h2 class="fw-bold">Nền tảng học lập trình trực tuyến dành riêng <br /> <span class="text-info">cho học sinh</span></h2>
            <ul class="mt-4 list-unstyled fs-5">
                <li><i class="bi bi-plus-circle me-2"></i>Học lập trình từ 0</li>
                <li><i class="bi bi-plus-circle me-2"></i>Khơi dậy đam mê công nghệ</li>
                <li><i class="bi bi-plus-circle me-2"></i>Chinh phục thế giới số, khẳng định bản thân</li>
                <li><i class="bi bi-plus-circle me-2"></i>Mở ra cơ hội việc làm hấp dẫn trong tương lai</li>
            </ul>
            <div class="mt-4">
                <img src="~/images/fpt_polytechnic.png" alt="FPT" class="me-3" style="height: 40px;" />
                <img src="~/images/funix.png" alt="FUNiX" style="height: 40px;" />
            </div>
        </div>

        <div class="col-lg-4 bg-white text-dark rounded shadow p-4">
            <h4 class="mb-4 text-center">Đăng ký tài khoản CodeLearn</h4>
            <form asp-action="Register" method="post">
                @Html.AntiForgeryToken()
                <div class="form-group mb-3">
                    <label for="Role">Chọn vai trò</label>
                    <select asp-for="Role" class="form-control">
                        @foreach (var role in Model.Roles)
                        {
                            <option value="@role.Value">@role.Text</option>
                        }
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="FullName">Họ và tên</label>
                    <input asp-for="FullName" class="form-control" placeholder="Tên đầy đủ" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label for="Email">Tài khoản (Email)</label>
                    <input asp-for="Email" class="form-control" placeholder="Email của bạn" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="Password">Mật khẩu</label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Mật khẩu" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="ConfirmPassword">Xác nhận mật khẩu</label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Xác nhận mật khẩu" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <button type="submit" class="btn btn-primary w-100">Đăng ký</button>
            </form>

            <hr />
            <div class="text-center">Hoặc tiếp tục với</div>
            <div class="d-flex justify-content-center gap-3 mt-3">
                <button class="btn btn-light border"><i class="bi bi-windows"></i></button>
                <button class="btn btn-light border"><i class="bi bi-google"></i></button>
                <button class="btn btn-light border"><i class="bi bi-github"></i></button>
            </div>
            <p class="mt-3 text-center">
                Nếu bạn đã có tài khoản, vui lòng <a href="/Account/Login">Đăng nhập</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://ajax.aspnetcdn.com/ajax/knockout/knockout-3.4.0.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}