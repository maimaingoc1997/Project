@model CourseShopOnline.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Đăng kí";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid text-light py-5" style="min-height: 80vh; background-color: #1f2d3d;">
    <div class="row justify-content-center align-items-center">
        <!-- Intro bên trái -->
        <div class="col-lg-5 text-start ps-5">
            <h2 class="fw-bold text-warning">Học lập trình trực tuyến <br /><span class="text-info">cho học sinh</span></h2>
            <ul class="mt-4 list-unstyled fs-5">
                <li><i class="bi bi-code-slash me-2"></i>Học từ cơ bản tới nâng cao</li>
                <li><i class="bi bi-lightning me-2"></i>Khơi dậy đam mê công nghệ</li>
                <li><i class="bi bi-award me-2"></i>Chinh phục thế giới số</li>
                <li><i class="bi bi-briefcase me-2"></i>Cơ hội nghề nghiệp hấp dẫn</li>
            </ul>
            <div class="mt-4 d-flex gap-3">
                <img src="~/images/fpt_polytechnic.png" alt="FPT" style="height: 40px;" />
                <img src="~/images/funix.png" alt="FUNiX" style="height: 40px;" />
            </div>
        </div>

        <!-- Form đăng ký bên phải -->
        <div class="col-lg-4 bg-white text-dark rounded-4 shadow-lg p-5">
            <h4 class="mb-4 text-center text-primary">Đăng ký tài khoản CodeLearn</h4>
            <form asp-action="Register" method="post" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()

                <!-- Chọn vai trò -->
                <div class="form-group mb-3">
                    <label for="Role" class="form-label">Chọn vai trò</label>
                    <select asp-for="Role" class="form-control form-control-sm" required>
                        <option value="Student">Student</option>
                        <option value="Teacher">Teacher</option>
                    </select>
                    <div class="invalid-feedback">Vui lòng chọn vai trò của bạn.</div>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <!-- Họ và tên -->
                <div class="form-group mb-3">
                    <label for="FullName" class="form-label">Họ và tên</label>
                    <input asp-for="FullName" class="form-control form-control-sm" placeholder="Tên đầy đủ" required />
                    <div class="invalid-feedback">Vui lòng nhập tên đầy đủ của bạn.</div>
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="form-group mb-3">
                    <label for="Email" class="form-label">Tài khoản (Email)</label>
                    <input asp-for="Email" class="form-control form-control-sm" placeholder="Email của bạn" required />
                    <div class="invalid-feedback">Vui lòng nhập địa chỉ email hợp lệ.</div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Mật khẩu -->
                <div class="form-group mb-3">
                    <label for="Password" class="form-label">Mật khẩu</label>
                    <input asp-for="Password" class="form-control form-control-sm" type="password" placeholder="Mật khẩu" required />
                    <div class="invalid-feedback">Vui lòng nhập mật khẩu của bạn.</div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Xác nhận mật khẩu -->
                <div class="form-group mb-3">
                    <label for="ConfirmPassword" class="form-label">Xác nhận mật khẩu</label>
                    <input asp-for="ConfirmPassword" class="form-control form-control-sm" type="password" placeholder="Xác nhận mật khẩu" required />
                    <div class="invalid-feedback">Vui lòng xác nhận mật khẩu của bạn.</div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <!-- Nút đăng ký -->
                <button type="submit" class="btn btn-primary w-100 py-2 fs-5 rounded-lg">Đăng ký</button>
            </form>

            <hr />
            <div class="text-center">Hoặc tiếp tục với</div>

            <!-- Các nút login social -->
            <div class="d-flex justify-content-center gap-3 mt-3">
                <button class="btn btn-outline-dark rounded-circle px-3 py-2 transition hover:bg-blue-100"><i class="bi bi-windows"></i></button>
                <button class="btn btn-outline-danger rounded-circle px-3 py-2 transition hover:bg-blue-100"><i class="bi bi-google"></i></button>
                <button class="btn btn-outline-secondary rounded-circle px-3 py-2 transition hover:bg-blue-100"><i class="bi bi-github"></i></button>
            </div>

            <p class="mt-3 text-center">
                <span class="text-muted">Nếu bạn đã có tài khoản, vui lòng <a href="/Account/Login" class="fw-semibold text-decoration-none">Đăng nhập</a></span>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://ajax.aspnetcdn.com/ajax/knockout/knockout-3.4.0.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
