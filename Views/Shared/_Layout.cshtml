@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CodeLearn</title>

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-light d-flex flex-column min-vh-100">

    <!-- Header -->
    <header class="bg-white shadow-sm">
        <nav class="navbar navbar-expand-lg navbar-light container">
            <!-- Logo -->
            <a class="navbar-brand fw-bold text-primary" href="/">
                <img src="~/images/logo.png" alt="Logo" width="30" height="30" class="d-inline-block align-text-top me-2" />
                CodeLearn
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- Menu -->
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Học tập</a></li>
                    <li class="nav-item"><a class="nav-link" href="/LuyenTap">Luyện tập</a></li>
                    <li class="nav-item"><a class="nav-link" href="/ThiDau">Thi đấu</a></li>
                    <li class="nav-item"><a class="nav-link" href="/SuKien">Sự kiện</a></li>
                    <li class="nav-item"><a class="nav-link" href="/NguoiDongGop">Người đóng góp</a></li>
                    <li class="nav-item"><a class="nav-link" href="/ChiaSe">Chia sẻ</a></li>
                </ul>

                <!-- User Actions -->
                <div class="d-flex align-items-center gap-2">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="dropdown">
                            <button class="btn btn-outline-primary dropdown-toggle" type="button" id="userMenu" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-1"></i> @User.Identity.Name
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                                <li><a class="dropdown-item" href="/Account/EditProfile">Thông tin tài khoản</a></li>
                                <li><a class="dropdown-item" href="/Account/ChangePassword">Thay đổi mật khẩu</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item text-danger" href="/Account/Logout">Đăng xuất</a></li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <a class="btn btn-outline-primary" href="/Account/Login">Đăng nhập</a>
                        <a class="btn btn-primary" href="/Account/Register">Đăng ký</a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <!-- Main -->
    <main class="container py-4 flex-grow-1">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-auto">
        <div class="container">
            <p class="mb-1">© 2025 CodeLearn. All rights reserved.</p>
            <p class="mb-0 small">Nền tảng học lập trình trực tuyến cho học sinh Việt Nam</p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
