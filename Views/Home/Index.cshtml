@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>CodeLearn Home</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50 font-sans">
 
  <!-- Banner -->
  <section class="bg-blue-100 mt-4 rounded-xl mx-6 p-6 flex justify-between items-center shadow-sm">
    <div>
      <h1 class="text-3xl font-bold text-blue-600 mb-2">ĐƯỜNG ĐUA LẬP TRÌNH</h1>
      <p class="text-gray-700 mb-2">Dành riêng cho học sinh Tiểu học và THCS</p>
      <button class="bg-red-500 text-white px-4 py-2 rounded-md">XEM CHI TIẾT</button>
      <p class="text-xs mt-1 text-gray-500">30/09/2024 - Tháng 04/2025 (Dự kiến)</p>
    </div>
    <img src="robot-banner.png" alt="Robot" class="w-40" />
  </section>

  <!-- Tabs -->
  <section class="mt-6 mx-6">
    <div class="flex space-x-6 text-blue-700 font-semibold border-b border-gray-200">
      <button class="pb-2 border-b-2 border-blue-700">Khóa học gợi ý</button>
      <button class="pb-2">Đang học (2)</button>
      <button class="pb-2">Hoàn thành (1)</button>
    </div>
  </section>

  <!-- Course Cards -->
  <section class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-4 p-6">
    <!-- Card 1 -->
    <div class="bg-white rounded-lg shadow-md p-4">
      <h2 class="text-blue-800 text-lg font-bold mb-2">C# for Beginners</h2>
      <p class="text-sm text-gray-600">C# cho người mới bắt đầu</p>
      <p class="text-yellow-500 text-sm">⭐⭐⭐⭐⭐ 4.9</p>
      <p class="text-red-600 font-bold mt-2">499,000 đ <span class="line-through text-gray-400 text-sm">720,000 đ</span></p>
    </div>
    <!-- Card 2 -->
    <div class="bg-white rounded-lg shadow-md p-4">
      <h2 class="text-blue-800 text-lg font-bold mb-2">Object Oriented Programming</h2>
      <p class="text-sm text-gray-600">Lập trình hướng đối tượng trong C++</p>
      <p class="text-yellow-500 text-sm">⭐⭐⭐⭐ 4.4</p>
      <p class="text-green-600 font-bold mt-2">Miễn phí</p>
    </div>
    <!-- Card 3 -->
    <div class="bg-white rounded-lg shadow-md p-4">
      <h2 class="text-blue-800 text-lg font-bold mb-2">Standard Template Library</h2>
      <p class="text-sm text-gray-600">Thư viện chuẩn C++</p>
      <p class="text-yellow-500 text-sm">⭐⭐⭐⭐ 4.3</p>
      <p class="text-green-600 font-bold mt-2">Miễn phí</p>
    </div>
    <!-- Card 4 -->
    <div class="bg-white rounded-lg shadow-md p-4">
      <h2 class="text-orange-600 text-lg font-bold mb-2">Java Basic</h2>
      <p class="text-sm text-gray-600">Java cơ bản</p>
      <p class="text-yellow-500 text-sm">⭐⭐⭐⭐ 4.6</p>
      <p class="text-green-600 font-bold mt-2">Miễn phí</p>
    </div>
  </section>
</body>
</html>
